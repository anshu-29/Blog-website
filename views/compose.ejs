<%- include("partials/header")%>

<h1> Compose </h1>

<form action="/compose" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="inputTitle">Title</label>
        <input class="form-control" id="inputTitle" type="text"  name="composeInput"  placeholder="Enter your title here">
    </div>
    <div class="form-group">


        <label for="inputBox"> Post </label>
        <textarea class="form-control" id="inputBox" name="composeBox" cols="40" rows="5"> </textarea>
        <label for="imageFile">Image</label>
        <input type="file" id="imageFile" name="imageFile">

        <label for="videoFile">Video</label>
        <input type="file" id="videoFile" name="videoFile">

        <label for="audioFile">Audio</label>
        <input type="file" id="audioFile" name="audioFile">

    </div>

        <button class="btn btn-primary" type="submit" name="submit" value= ""> Publish </button>


</form>

<%- include("partials/footer") %>